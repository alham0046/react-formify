{
    "name": "react-formify",
    "version": "1.2.7",
    "description": "Reusable Zustand-based input kit for React forms.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
        "build": "npm run build:css && tsup",
        "dev": "tsup --watch",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": ">=18.3.1",
        "react-datepicker": ">=4.24.0",
        "react-dom": ">=18.0.0",
        "zustand": ">=4.5.6"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.4",
        "@tailwindcss/postcss": ">=4.1.4",
        "@types/node": "^22.14.1",
        "@types/react": "^19.1.2",
        "postcss": ">=8.5.3",
        "tailwindcss": ">=4.1.4",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3"
    },
    "keywords": [
        "zustand",
        "form",
        "input",
        "react",
        "component-library",
        "datepicker"
    ]
}
